<idea-plugin>
    <id>it.unibo.alchemist.idea</id>

    <name>Alchemist</name>

    <description><![CDATA[
        <p>Adds support for <a href="https://github.com/AlchemistSimulator/Alchemist">Alchemist</a> develop.</p>
        <br>
        <p>Currently, it is possible to work with two templates: <a href="https://protelis.github.io/">Protelis</a> and Sapere.</p>
        <br>
        <hr>
        <p>For use instruction, look at this <a href="https://github.com/vil-helm/alchemist-intellij-plugin/blob/master/README.md">guide</a>.</p>
    ]]></description>

    <vendor></vendor>

    <!--<version>1.0.0</version>-->
    <!--<idea-version since-build="201.5616"/>-->

    <change-notes><![CDATA[
        Now, it is possible to create a project and work with two templates: <a href="https://protelis.github.io/">Protelis</a> and Sapere.
    ]]></change-notes>

    <!--<resource-bundle></resource-bundle>-->

    <depends>org.jetbrains.plugins.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectTemplatesFactory implementation="it.unibo.alchemist.idea.project.AlchemistTemplatesFactory"/>
    </extensions>

</idea-plugin>